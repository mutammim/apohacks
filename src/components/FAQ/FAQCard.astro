---
const { question, answer, cardId } = Astro.props;
---

<div
  class="space-y-1 overflow-clip rounded-md bg-indigo-200 px-6 py-4 text-left text-sm text-indigo-950 motion-safe:transition-transform motion-safe:hover:scale-105"
  id=`faq${cardId}`
>
  <p class="font-bold">{question}</p>
  <p>{answer}</p>
</div>

<script define:vars={{ cardId }}>
  let hash = window.location.hash;
  if (hash == `#faq${cardId}`) {
    document
      .getElementById(`faq${cardId}`)
      .classList.add("drop-shadow-[0_0_14px_#FF5DA9]");
  }
</script>

