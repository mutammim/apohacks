---
const { question, answer, cardId } = Astro.props;
---

<div
  class="space-y-2 overflow-clip bg-dark-bg px-6 py-4 text-left text-sm shadow-[6px_6px_rgba(0,0,0,0.3)] motion-safe:transition-transform motion-safe:hover:scale-105 motion-safe:hover:shadow-[8px_8px_rgba(0,0,0,0.3)]"
  id=`faq${cardId}`
>
  <p class="text-2xl">{question}</p>
  <p class="text-lg">{answer}</p>
</div>

<script define:vars={{ cardId }}>
  let hash = window.location.hash;
  if (hash == `#faq${cardId}`) {
    document
      .getElementById(`faq${cardId}`)
      .classList.remove("shadow-[6px_6px_rgba(0,0,0,0.3)]");
    document.getElementById(`faq${cardId}`).classList.add("border-2");
    document.getElementById(`faq${cardId}`).classList.add("border-accent");
  }
</script>

