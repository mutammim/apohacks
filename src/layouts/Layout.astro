          },
          "image": [
            "https://res.cloudinary.com/dacrrezls/image/upload/f_auto,q_auto/ksawdi7rqsrpwxnvzfzh",
            "https://res.cloudinary.com/dacrrezls/image/upload/f_auto,q_auto/tap6ajlfihfqwh95k9fw",
            "https://cloud-g4ahjg6ib-hack-club-bot.vercel.app/0image.png"
          ],
          "description": "Apocalypse is Toronto's biggest in-person high school hackathon. For 42 hours, build fun tech with 100+ other high school programmers & engineers to survive the zombie apocalypse!",
          "offers": {
            "@type": "Offer",
            "url": "https://apohacks.com/?ref=events",
