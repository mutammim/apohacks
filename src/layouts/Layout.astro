---
interface Props {
  title: string;
}

const { title } = Astro.props;

// import SpeedInsights from "@vercel/speed-insights/astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta property="og:title" content="Apocalypse" />
    <meta property="og:site_name" content="Apocalypse" />
    <meta
      name="description"
      content="Apocalypse is Toronto's biggest in-person high school hackathon. For 42 hours, build fun tech with 100+ other high school programmers & engineers to survive the zombie apocalypse!"
    />
    <meta
      name="twitter:description"
      content="Apocalypse is Toronto's biggest in-person high school hackathon. For 42 hours, build fun tech with 100+ other high school programmers & engineers to survive the zombie apocalypse!"
    />
    <meta
      property="og:description"
      content="Apocalypse is Toronto's biggest in-person high school hackathon. For 42 hours, build fun tech with 100+ other high school programmers & engineers to survive the zombie apocalypse!"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <script type="application/ld+json">
